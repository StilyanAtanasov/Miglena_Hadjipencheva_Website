@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="header-nav flex-row">
	@if (SignInManager.IsSignedIn(User))
	{
		<li>
			<a class="active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Профил</a>
		</li>
		<li>
			<form class="active" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button class="btn btn-none" type="submit" class="nav-link btn btn-link text-dark">Изход</button>
			</form>
		</li>
	}
	else
	{
		<li>
			<a class="active" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
		</li>
		<li>
			<a class="active" asp-area="Identity" asp-page="/Account/Login">Вход</a>
		</li>
	}
</ul>
