@model (decimal percentFilled, short ratingMaxValue)

<div class="stars" data-percent="@(Math.Ceiling(Model.percentFilled / Model.ratingMaxValue * 100))">
	<div class="stars-row stars-base flex-row">
		@for (int i = 0; i < Model.ratingMaxValue; i++)
		{
			<i class="fa-regular fa-star"></i>
		}
	</div>
	<div class="stars-row stars-filled flex-row">
		@for (int i = 0; i < Model.ratingMaxValue; i++)
		{
			<i class="fa-solid fa-star"></i>
		}
	</div>
</div>