@using MHAuthorWebsite.Web.ViewModels.Product
@using MHAuthorWebsite.Data.Models.Enums
@using System.ComponentModel.DataAnnotations
@model ICollection<AttributeValueForm>

@for (int i = 0; i < Model.Count; i++)
{
	<div class="mb-3 attribute-field">
		@{
			AttributeValueForm a = Model.ElementAt(i);
		}

		<label class="form-label">@a.Label</label>

		@if (a.DataType == AttributeDataType.Text)
		{
			<input name="DynamicAttributes[@i].Value" class="form-control" />
		}
		else if (a.DataType == AttributeDataType.Number)
		{
			<input type="number" name="DynamicAttributes[@i].Value" class="form-control" />
		}

		<input type="hidden" name="DynamicAttributes[@i].Key" value="@a.Key" />
	</div>
}