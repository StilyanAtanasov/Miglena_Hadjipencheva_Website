@using MHAuthorWebsite.Web.ViewModels.Product
@model IEnumerable<ProductCardViewModel>

@section Styles {
	<link rel="stylesheet" href="~/css/store.css" />
}

@{
	ViewData["Title"] = "Магазин";
}

<h1>Магазин</h1>

<section class="products">
	@foreach (var product in Model)
	{
		<div class="product flex-column">
			<h4 class="name">@product.Name</h4>
			<span class="category">@product.ProductType</span>
			<p class="description">@product.ShortDescription</p>
			<p>@product.Price.ToString("F2") лв.</p>
			<span>@(product.IsAvailable ? "Налично" : "Изчерпано")</span>
			<a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Виж повече</a>
		</div>
	}
</section>
