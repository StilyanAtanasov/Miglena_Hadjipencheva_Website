@using MHAuthorWebsite.Web.ViewModels.Product
@model ICollection<ProductListViewModel>

@{
	ViewData["Title"] = "Продукти";
	ViewData["CurrentPage"] = Pages.Admin.AllProducts;
}

<h1 class="mb-4">Списък с продукти</h1>
<a class="nav-link text-dark text-end text-primary" asp-area="Admin" asp-controller="AdminProduct" asp-action="AddProduct"> + Добави продукт</a>

<table class="table table-bordered table-hover align-middle">
	<thead class="table-light">
		<tr>
			<th>Име</th>
			<th>Категория</th>
			<th>Цена</th>
			<th>Количество</th>
			<th class="text-end">Действия</th>
		</tr>
	</thead>
	<tbody>
		@if (!Model.Any())
		{
			<tr>
				<td colspan="6" class="text-center text-muted">Няма добавени продукти.</td>
			</tr>
		}
		else
		{
			foreach (var product in Model)
			{
				<tr>

					@if (product.IsPublic)
					{
						<td><a data-trigger="load-unlimited" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">@product.Name</a></td>
					}
					else
					{
						<td>@product.Name</td>
					}

					<td>@product.ProductTypeName</td>
					<td>@product.Price.ToString("F2") лв.</td>
					<td>@product.StockQuantity</td>
					<td class="text-end">
						<form asp-area="Admin" asp-controller="AdminProduct" asp-action="TogglePublicity" asp-route-productId="@product.Id" method="post" class="d-inline">
							<button data-trigger="load-unlimited" type="submit" class="btn btn-sm btn-primary">@(product.IsPublic ? "Скрий" : "Публикувай")</button>
						</form>
						<a data-trigger="load-unlimited" asp-area="Admin" asp-controller="AdminProduct" asp-action="EditProduct" asp-route-productId="@product.Id" class="btn btn-sm btn-warning me-2">Редактирай</a>
						<form asp-area="Admin" asp-controller="AdminProduct" asp-action="DeleteProduct" asp-route-productId="@product.Id" method="post" class="d-inline">
							<button data-trigger="load-unlimited" type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Сигурни ли сте, че искате да изтриете продукта?')">Изтрий</button>
						</form>
					</td>
				</tr>
			}
		}
	</tbody>
</table>